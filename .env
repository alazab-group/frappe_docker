#  https://github.com/alazab-group/frappe_docker/blob/main/docs/environment-variables.md
# Alazab Complete System Configuration

# Version Configuration
FRAPPE_VERSION=v15.64.1
ERPNEXT_VERSION=v15.64.1

# Docker Registry (using official images for now)
FRAPPE_DOCKER_REGISTRY=frappe

# Site Configuration  
SITES=alazab.local,erp.alazab.local,crm.alazab.local
SITE_NAME=alazab.local

# Database Configuration
DB_HOST=mariadb
DB_PORT=3306
DB_PASSWORD=admin123
DB_ROOT_PASSWORD=admin123

# Admin Configuration
ADMIN_PASSWORD=admin123
ENCRYPTION_KEY=

# Redis Configuration
REDIS_CACHE_URL=redis://redis:6379/0
REDIS_QUEUE_URL=redis://redis:6379/1
REDIS_SOCKETIO_URL=redis://redis:6379/2

# Application Configuration
WORKER_CLASS=gthread
WORKERS=4
THREADS=4
TIMEOUT=120
KEEPALIVE=2

# Development Configuration
DEVELOPER_MODE=1
FRAPPE_LOGGING=1
REINDEX_ENABLED=1

# Complete Apps Configuration
INSTALL_APPS=frappe,erpnext,hrms,books,crm,helpdesk,erpnext_price_estimation

# Company Settings
COMPANY_NAME=Alazab Construction & Engineering
COMPANY_DOMAIN=al-azab.co
DEFAULT_CURRENCY=EGP
DEFAULT_COUNTRY=Egypt
