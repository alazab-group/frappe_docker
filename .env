#  https://github.com/alazab-group/frappe_docker/blob/main/docs/environment-variables.md
# Alazab Custom Configuration for Frappe Docker

# Image Configuration
FRAPPE_VERSION=develop
ERPNEXT_VERSION=develop
FRAPPE_BRANCH=develop
ERPNEXT_BRANCH=develop

# Custom Repository URLs
FRAPPE_PATH=https://github.com/alazab-group/frappe
ERPNEXT_PATH=https://github.com/alazab-group/erpnext
BENCH_PATH=https://github.com/alazab-group/bench

# Site Configuration
SITES=alazab.local,erp.alazab.local,crm.alazab.local
SITE_NAME=alazab.local

# Database Configuration
DB_TYPE=mariadb
DB_HOST=mariadb
DB_PORT=3306
DB_PASSWORD=admin123
DB_ROOT_PASSWORD=admin123

# Admin Configuration
ADMIN_PASSWORD=admin123
ENCRYPTION_KEY=

# Redis Configuration
REDIS_CACHE_URL=redis://redis:6379/0
REDIS_QUEUE_URL=redis://redis:6379/1
REDIS_SOCKETIO_URL=redis://redis:6379/2

# Application Configuration
WORKER_CLASS=gthread
WORKERS=4
THREADS=4
TIMEOUT=120
KEEPALIVE=2

# Email Configuration
MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_SSL=true
MAIL_USE_TLS=false
MAIL_USERNAME=
MAIL_PASSWORD=

# Development Configuration
DEVELOPER_MODE=1
FRAPPE_LOGGING=1
REINDEX_ENABLED=1

# Production Configuration (uncomment for production)
# DEVELOPER_MODE=0
# FRAPPE_LOGGING=0
# HTTP_TIMEOUT=120

# Custom Apps Configuration
INSTALL_APPS=frappe,erpnext,crm,hrms,helpdesk,builder,gameplan,webshop,studio,drive,insights,books,mail,print_designer,erpnext_price_estimation,assets,newsletter,translator,waba_integration

# Alazab Specific Settings
COMPANY_NAME=Alazab Construction & Engineering
COMPANY_DOMAIN=al-azab.co
DEFAULT_CURRENCY=EGP
DEFAULT_COUNTRY=Egypt
